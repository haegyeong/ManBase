<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGropMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home"
                style="@style/navigationMenu"
                android:checked="true"
                android:drawableTop="@drawable/selector_home"
                android:text="首页"
                android:textColor="@drawable/selector_home" />

            <RadioButton
                android:id="@+id/single"
                style="@style/navigationMenu"
                android:drawableTop="@drawable/selector_single"
                android:text="单品"
                android:textColor="@drawable/selector_single" />

            <RadioButton
                android:id="@+id/group"
                style="@style/navigationMenu"
                android:drawableTop="@drawable/selector_group"
                android:text="搭配"
                android:textColor="@drawable/selector_group" />

            <RadioButton
                android:id="@+id/discover"
                style="@style/navigationMenu"
                android:drawableTop="@drawable/selector_discover"
                android:text="学堂"
                android:textColor="@drawable/selector_discover" />

            <RadioButton
                android:id="@+id/mine"
                style="@style/navigationMenu"
                android:drawableTop="@drawable/selector_mine"
                android:text="我的"
                android:textColor="@drawable/selector_mine" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>
