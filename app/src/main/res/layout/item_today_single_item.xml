<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:background="@color/defaultbackground">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_pic"
        android:layout_below="@id/iv_pic"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#fff"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="上衣："
            android:textColor="@color/colorTheme" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_description"
            android:layout_toRightOf="@id/tv_description"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="秋季潮鞋2016新款真皮乐福鞋男士休闲鞋男鞋子英伦懒人鞋潮流板鞋"
            android:textColor="@color/defaultText" />

        <TextView
            android:id="@+id/tv_coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_marginLeft="35dp"
            android:text="￥349.30"
            android:textColor="@color/colorTheme"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/tv_coupon_price"
            android:text="/￥499.00"
            android:textColor="@color/defaultText"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>